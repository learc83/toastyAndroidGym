<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/listBedImg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/bed_icon"
        android:background="@color/bed_background_off_white"
        android:padding="20dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/listBedNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:textSize="35sp"
        android:text="Number" />
    <TextView
        android:id="@+id/listBedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Name"
        android:layout_alignBottom="@id/listBedImg"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/redBedOverlay"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#00FF0000"
        android:padding="20dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>